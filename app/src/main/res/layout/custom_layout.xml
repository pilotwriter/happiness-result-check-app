<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="330dp"
    android:columnCount="2"
    android:rowCount="3"
    android:padding="30dp"
    android:background="@color/colorBlack"
    android:layout_gravity="center"


    >

    <ImageView
        android:id="@+id/closeCustomLayout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"

        app:srcCompat="@drawable/ic_close_black_24dp"

        android:contentDescription="TODO" />

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/textViewPersonel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="30dp"
            android:text="Personel"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <CheckBox
            android:id="@+id/personelCheckBox"
            style="@android:style/Widget.Holo.Light.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:buttonTint="@color/colorWhite"

            android:layout_column="1"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="#00F3F3F3"
            android:paddingRight="30dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFFFFFF"
            android:textColorLink="#F5F4F4" />

        <TextView
            android:id="@+id/textViewEgitim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:textSize="36sp"
            android:layout_column="0"
            android:paddingLeft="30dp"
            android:text="Eğitim"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/egitimCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorWhite"

            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/textViewEkipman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="30dp"
            android:textSize="36sp"
            android:text="Ekipman"
            android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/ekipmanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        android:layout_column="1"
        android:buttonTint="@color/colorWhite"
        />
    </GridLayout>
    <Button
        android:id="@+id/sendTheInfo"


        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button_shape"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="Gönder" />
</LinearLayout>